<div class="row justify-content-center align-items-center login-page background h-100">
  <div class="col-4">
    <div class="m-3 p-3 bg-light rounded">
      <h2 class="text-center">Change your password</h2>
      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.input :reset_password_token, as: :hidden %>
      <%= f.full_error :reset_password_token %>

      <div class="form-inputs">
        <%= f.input :password,
                    label: "New password",
                    required: true,
                    autofocus: true,
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { autocomplete: "new-password" } %>
        <%= f.input :password_confirmation,
                    label: "Confirm your new password",
                    required: true,
                    input_html: { autocomplete: "new-password" } %>
      </div>

      <div class="form-actions center-content">
        <%= f.button :submit, "Change my password", class: 'btn btn-outline-success' %>
      </div>
    <% end %>
    </div>
    <div class="m-3 p-3 bg-light rounded text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>



