<div class="row justify-content-center align-items-center login-page background h-100">
  <div class="col-4">
    <div class="m-3 p-3 bg-light rounded">
      <h2 class="text-center">Log in</h2>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean, class: 'text-success text-center' if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions center-content">
          <%= f.button :submit, "Log in", class: 'btn btn-outline-success' %>
          <span class="divider">or</span>
          <%= link_to '', user_facebook_omniauth_authorize_path, class: 'fab external_login_icon fa-facebook fa-lg' %>
          <%= link_to '', user_github_omniauth_authorize_path, class: 'pl-2 external_login_icon fab fa-github fa-lg ' %>
        </div>
      <% end %>
    </div>
    <div class="m-3 p-3 bg-light rounded text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

